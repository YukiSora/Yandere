<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="20dp" />
            <padding
                android:bottom="3dp"
                android:left="10dp"
                android:right="10dp"
                android:top="3dp" />
            <stroke
                android:width="2dp"
                android:color="#66CCFF" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="20dp" />
            <padding
                android:bottom="3dp"
                android:left="10dp"
                android:right="10dp"
                android:top="3dp" />
            <stroke
                android:width="1dp"
                android:color="#C9C9C9" />
        </shape>
    </item>

</selector>
