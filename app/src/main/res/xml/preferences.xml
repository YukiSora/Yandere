<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="setting"
        android:title="Setting">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="isSafe"
            android:persistent="true"
            android:title="Image Rating"
            android:summaryOff="R-18 Image"
            android:summaryOn="Safe Image" />

        <Preference
            android:key="update"
            android:title="Update tags"
            android:summary="Last update: -" />

    </PreferenceCategory>

    <PreferenceCategory android:title="About Application">

        <Preference
            android:title="Source"
            android:summary="https://yande.re" />

        <Preference
            android:title="Author"
            android:summary="Yuki Sora" />

        <Preference
            android:title="GitHub"
            android:summary="https://github.com/YukiSora/Yandere" />

        <Preference
            android:title="Version"
            android:summary="1.0" />

    </PreferenceCategory>

</PreferenceScreen>
