<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="setting"
        android:title="Setting">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="isSafe"
            android:persistent="true"
            android:summaryOff="R-18 Image"
            android:summaryOn="Safe Image"
            android:title="Image Rating" />

        <Preference
            android:key="update"
            android:summary="Last update: -"
            android:title="Update tags" />

    </PreferenceCategory>

    <PreferenceCategory android:title="About Application">

        <Preference
            android:summary="https://yande.re"
            android:title="Source" />

        <Preference
            android:key="license"
            android:summary="Open source licenses"
            android:title="Licenses" />

        <Preference
            android:summary="Yuki Sora"
            android:title="Author" />

        <Preference
            android:summary="https://github.com/YukiSora/Yandere"
            android:title="GitHub" />

        <Preference
            android:summary="2.0"
            android:title="Version" />

    </PreferenceCategory>

</PreferenceScreen>
